#!/bin/bash

set -e

if [ -z "$1" ]; then
  echo "Usage: bin/publish <language>"
  exit 0
fi


publish_ruby() {
  # for help, please see:
  # https://docs.github.com/en/packages/working-with-a-github-packages-registry/working-with-the-rubygems-registry
  # We use the Bundler strategy

  cd generated/ruby
  gem build *.gemspec
  gem push --key github --host https://rubygems.pkg.github.com/ManageMC managemc_api-*.gem
  rm *.gem
}

publish_java() {
  mvn clean deploy -f poms/pom-java.xml -Pdefault
}


case $1 in
  ruby) publish_ruby;;
  java) publish_java;;
  *) echo "Unrecognized language $1. Must be one of: java, ruby";;
esac
